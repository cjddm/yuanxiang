
.ko{
	color: #acacac;
	text-align: center;
	margin-top: 10rpx;
}

.shoucang{
	/* position:relative; */
	margin-top:-5rpx;
	margin-bottom: 10px;
	width:100%;
	height:187rpx;
}
.shoucang_card{
	position: relative;
	width:94%;
	top:20rpx;
	left:3%;
	height:170rpx;
	background-color:#fff;
	border-radius: 3px;
	box-shadow:1px 1px 8px 6px rgb(236, 235, 235);
}

.title{
	font-size:30rpx;
	margin-left: 1px;
	margin-top: 2px;
}
.value{
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	margin-top: 15px;
	margin-left: 2px;
	font-size: 28rpx;
}
.author{
		position: absolute;
		bottom: 2px;
		right: 2px;
		font-size: 25rpx;
}
.img{
	position: absolute;
	width: 30px;
	height: 50px;
	right: -2px;
	top: -9px;
	z-index: 99;
}